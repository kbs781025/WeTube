extends layouts/main.pug

block content
    .form-container
        form(action=routes.join method="post")
            input(type="text" placeholder="Name..." name="name" required=true)
            input(type="email" placeholder="Email..." name="email" required=true)
            input(type="password" placeholder="Password..." name="password1" required=true)
            input(type="password" placeholder="Verify Password..." name="password2" required=true)
            input(type="submit" value="Join")
        include partials/socialLogin
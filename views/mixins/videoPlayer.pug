mixin videoPlayer(video = {})
    .videoPlayer#jsVideoContainer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__column
                input.videoPlayer__volume#jsVolume(type="range" min="0" max="1.0" value="0.5" step="0.1")
                span#jsVolumeButton
                    i.fas.fa-volume-up
                span
                    span#jsCurrentTime 00:00:00
                    |/
                    span#jsTotalTime 00:00:00
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlayer__column
                span#jsFullScreenButton
                    i.fas.fa-expand
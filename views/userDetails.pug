extends layouts/main.pug
include mixins/videoBlock

block content
    .user-profile
        .user_profile__header
            img.avatar(src=user.avatarUrl)
            h4.profile__username=user.userName
            h4.profile__email=user.email
            a(href=`users${routes.editProfile}`) Edit my profile
        .user_profile__videos
            each video in user.videos
                +videoBlock(video)